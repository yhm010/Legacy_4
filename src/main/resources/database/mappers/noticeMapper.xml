<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.iu.s1.notice.NoticeDAO">

	<select id="list" resultType="NoticeDTO">
		SELECT * FROM NOTICE
	</select>
	
	<select id="detail" parameterType="NoticeDTO" resultType="NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM = #{num}
	</select>
	
	<insert id="add" parameterType="NoticeDTO">
		INSERT INTO NOTICE
		VALUES (NOTICE_SEQ.NEXTVAL, #{title}, #{contents})
	</insert>
	
	<delete id="delete" parameterType="NoticeDTO">
		DELETE NOTICE WHERE NUM = #{num}
	</delete>
	
	<update id="update" parameterType="NoticeDTO">
	UPDATE NOTICE SET TITLE=#{title}, CONTENTS=#{contents}
	WHERE NUM=#{num}
	</update>
	
</mapper>
